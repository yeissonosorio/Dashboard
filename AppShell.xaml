<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Dashboard.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Dashboard"
    Shell.FlyoutBehavior="Disabled"

    BackgroundColor="#0583fe"
    TabBarBackgroundColor="#464948"
    TabBarForegroundColor="White"
    TabBarTitleColor="White"
    TabBarUnselectedColor="#CDCDCD"
    Title="Dashboard">
    <!-- Propiedades de la barra de navegacion y el titulo-->
    
    <!-- Barra de navegacion-->
    <TabBar x:Name="MYBar">
        <Tab Title="CINES"
             Icon="cine.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"></ShellContent>
        </Tab>
        <Tab Title="HISTORIAL"
             Icon="historial.svg">
            <ShellContent ContentTemplate="{DataTemplate local:Historial}" Route="Historial"></ShellContent>
        </Tab>
    </TabBar>

</Shell>
